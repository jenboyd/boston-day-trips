
  {{#each comments}}
    <div class="comment-module">
      <div class="text-align-left">
        <h4>{{trip.name}}</h4>
        <div class="comment" data-id={{id}}>
          <!-- <p class"add-padding">{{user.email}} says:</p> -->
          <p class="comment-text">"{{comments}}"</p>
        </div>
      </div>
      {{#if editable}}
        <button type="click" class:"block" id="delete-comment" data-id={{id}}>Delete</button>
        <button type="click" class:"block" id="get-single-comment" data-id={{id}}>Edit</button>
      {{/if}}
    </div>
  {{/each}}
